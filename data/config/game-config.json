      "masterVolume": 0.7,
      "effects": {
        "tileMove": {
          "volume": 0.8,
          "file": "tile_move.mp3"
        },
        "puzzleComplete": {
          "volume": 1.0,
          "file": "puzzle_complete.mp3"
        },
        "invalidMove": {
          "volume": 0.6,
          "file": "invalid_move.mp3"
        },
        "buttonClick": {
          "volume": 0.5,
          "file": "button_click.mp3"
        },
        "levelComplete": {
          "volume": 1.0,
          "file": "level_complete.mp3"
        },
        "gameOver": {
          "volume": 0.8,
          "file": "game_over.mp3"
        }
      },
      "music": {
        "menuTheme": {
          "volume": 0.4,
          "file": "menu_theme.mp3",
