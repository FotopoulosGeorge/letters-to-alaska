  "accessibility": {
    "features": {
      "highContrast": true,
      "reducedMotion": true,
      "screenReader": true,
      "keyboardNavigation": true,
      "colorBlindSupport": true
    },
    "controls": {
      "keyboardShortcuts": {
        "hint": "h",
        "undo": "z",
        "restart": "r",
        "pause": "space",
        "menu": "escape"
      },
      "touchGestures": {
        "swipe": true,
        "tap": true,
        "longPress": true
      }
    }
  },
  "analytics": {
    "tracking": {
      "puzzleCompletions": true,
      "moveEfficiency": true,
      "timeTracking": true,
      "hintUsage": true,
      "difficultyProgression": true,
      "sessionLength": true,
      "errorPatterns": true
    },
    "retention": {
      "dataStorageDays": 365,
      "sessionTimeoutMinutes": 30,
      "cleanupIntervalDays": 7
    }
  },
  "performance": {
    "optimization": {
      "preloadAssets": true,
      "imageCompression": true,
      "codeMinification": true,
      "cacheStrategy": "aggressive"
    },
    "limits": {
      "maxBoardSize": 6,
      "maxAnimations": 10,
      "maxParticles": 50,
      "memoryThresholdMB": 100
    }
  },
  "development": {
    "debug": {
      "enabled": false,
      "logLevel": "info",
      "showPerformanceMetrics": false,
      "enableCheatCodes": false
    },
    "testing": {
      "autoSave": true,
      "fastAnimations": false,
      "skipIntros": false,
      "unlockAllLevels": false
    }
  },
  "localization": {
    "defaultLanguage": "en",
    "supportedLanguages": ["en", "es", "fr", "de", "it", "pt", "ja", "ko", "zh"],
    "rtlSupport": false,
    "dateFormat": "MM/DD/YYYY",
    "numberFormat": {
      "thousands": ",",
      "decimal": "."
    }
  }
